<script src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
<script>
 //var map;

        google.maps.event.addDomListener(window, 'load', initialize);

        function initialize() {
            var mapOptions = {
                zoom: 4,
                center: new google.maps.LatLng(51.333333, 12.383333),
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            map = new google.maps.Map(document.getElementById('map_canvas'), mapOptions);
            
            //var mcOptions = { gridSize: 50, maxZoom: 15 };/*clustering*/
            
            var myMarker = new google.maps.LatLng(48.198977, 16.369701);
            var image = "Content/themes/base/images/airport2.png";
            var contentString = '<strong>My lonely marker</strong><br /><a href="http://www.facebook.com">Website</a>';
            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });
            var marker = new google.maps.Marker({
                position: myMarker,
                icon: image,
                map: map,
                title: "mans markeris"
            });
            google.maps.event.addListener(marker, 'click', function () {
                infowindow.open(map, marker);
            });
                    
            var json = jQuery.parseJSON = [
  {
      "title": "London Heathrow Airport (LHR)",
      "lat": 51.466841,
      "lng": -0.45304,
      "address": "Croydon Rd, Hillingdon, Greater London TW6 1GB, UK"
  },
  {
      "title": "Paris-Charles de Gaulle Airport",
      "lat": 49.010515,
      "lng": 2.548287,
      "address":"5 Rue du Cercle, 95700 Roissy-en-France, France 03 949"
  },
  {
      "title": "Frankfurt International Airport",
      "lat": 50.03884,
      "lng": 8.558984,
      "address": "Hugo-Eckener-Ring, 60549 Frankfurt, Germany 069 6900"
  },
  {
      "title": "Frankfurt1",
      "lat": 50.040000,
      "lng": 8.558984,
      "address": "Hugo-Eckener-Ring, 60549 Frankfurt, Germany 069 6900"
  },
  {
      "title": "Frankfurt1",
      "lat": 50.050000,
      "lng": 8.558984,
      "address": "Hugo-Eckener-Ring, 60549 Frankfurt, Germany 069 6900"
  }
            ]
            var infoWindow = new google.maps.InfoWindow();
          //  var markers = [];/*clustering*/
            for (var i = 0, length = json.length; i < length; i++) {
                var data = json[i],
                    latLng = new google.maps.LatLng(data.lat, data.lng);

                // Creating a marker and putting it on the map
                var marker = new google.maps.Marker({
                    position: latLng,
                    icon: image,
                    map: map,
                    title: data.title
                });


                //var markerCluster = new MarkerClusterer(map, markers);/*clustering*/

                //Attaching a click event to the current marker
                (function (marker, data) {
                    google.maps.event.addListener(marker, "click", function (e) {
                        infoWindow.setContent(data.title);
                        infoWindow.open(map, marker);
                    });
                })(marker, data);
            }
            }              
</script>
